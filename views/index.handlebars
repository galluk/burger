<h1>Burgers!</h1>

<h2>Burgers yet to be consumed</h2>

<ol>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}
         <button data-id="{{id}}" data-devoured="true" class="devour">Devour It!</button>
      </li>
    {{/unless}}
  {{/each}}
</ol>

<h2>Burgers that have been eaten</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ol>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Submit</button>

  <h3>Enter a burger you want to eat and click the "Submit" button.</h3>
  
</form>
