<h1>Burgers!</h1>

<h2>Burgers yet to be consumed</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{name}}</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{name}}</li>
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <input type="text" name="burger">
  </div>

  <button type="submit">Submit</button>

  <h3>Enter a burger you want to eat and click the "Submit" button.</h3>
  
</form>
